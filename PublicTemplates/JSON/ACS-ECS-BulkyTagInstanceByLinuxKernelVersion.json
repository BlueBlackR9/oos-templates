{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "en": "Bulky tag ECS instances using Linux kernel version as tag value by specifying instance IDs.",
    "zh-cn": "\u6279\u91cf\u901a\u8fc7\u6307\u5b9a\u5b9e\u4f8bIDs\u5c06Linux\u5185\u6838\u7248\u672c\u7528\u4f5c\u6807\u8bb0\u503c\u6807\u8bb0ECS\u5b9e\u4f8b\u3002",
    "name-en": "ACS-ECS-BulkyTagInstanceByLinuxKernelVersion",
    "name-zh-cn": "\u6279\u91cf\u6839\u636eLinux\u5185\u6838\u7248\u672c\u6807\u8bb0ECS\u5b9e\u4f8b"
  },
  "Parameters": {
    "targets": {
      "Type": "Json",
      "AssociationProperty": "Targets",
      "AssociationPropertyMetadata": {
        "ResourceType": "ALIYUN::ECS::Instance"
      }
    },
    "tagKey": {
      "Description": {
        "en": "The tag key.",
        "zh-cn": "\u6807\u8bb0\u952e\u3002"
      },
      "Type": "String",
      "Default": "KernelVersion"
    },
    "rateControl": {
      "Description": {
        "en": "Concurrency ratio of task execution.",
        "zh-cn": "\u4efb\u52a1\u6267\u884c\u7684\u5e76\u53d1\u6bd4\u7387\u3002"
      },
      "Type": "Json",
      "AssociationProperty": "RateControl"
    },
    "OOSAssumeRole": {
      "Description": {
        "en": "The RAM role to be assumed by OOS.",
        "zh-cn": "OOS\u626e\u6f14\u7684RAM\u89d2\u8272\u3002"
      },
      "Type": "String",
      "Default": "OOSServiceRole"
    }
  },
  "RamRole": "{{ OOSAssumeRole }}",
  "Tasks": [
    {
      "Name": "getInstance",
      "Description": {
        "en": "Views the ECS instances.",
        "zh-cn": "\u83b7\u53d6ECS\u5b9e\u4f8b\u3002"
      },
      "Action": "ACS::SelectTargets",
      "Properties": {
        "ResourceType": "ALIYUN::ECS::Instance",
        "Filters": [
          "{{ targets }}"
        ]
      },
      "Outputs": {
        "instanceIds": {
          "Type": "List",
          "ValueSelector": "Instances.Instance[].InstanceId"
        }
      }
    },
    {
      "Name": "tagECSInstacnes",
      "Action": "ACS::Template",
      "Description": {
        "en": "Creates and attaches tag to ECS instance.",
        "zh-cn": "\u521b\u5efa\u6807\u7b7e\u5e76\u5c06\u5176\u9644\u52a0\u5230ECS\u5b9e\u4f8b\u3002"
      },
      "Properties": {
        "TemplateName": "ACS-ECS-TagInstanceByLinuxKernelVersion",
        "Parameters": {
          "instanceId": "{{ ACS::TaskLoopItem }}",
          "tagKey": "{{ tagKey }}"
        }
      },
      "Loop": {
        "RateControl": "{{ rateControl }}",
        "Items": "{{ getInstance.instanceIds }}"
      }
    }
  ]
}