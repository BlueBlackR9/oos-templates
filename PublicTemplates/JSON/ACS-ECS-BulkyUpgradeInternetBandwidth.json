{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "en": "Bulky upgrades internet bandwidth of ECS instances.",
    "zh-cn": "\u6279\u91cf\u5347\u7ea7ECS\u5b9e\u4f8b\u516c\u7f51\u5e26\u5bbd\u3002",
    "name-en": "ACS-ECS-BulkyUpgradeInternetBandwidth",
    "name-zh-cn": "\u6279\u91cf\u5347\u7ea7ECS\u5b9e\u4f8b\u516c\u7f51\u5e26\u5bbd",
    "categories": [
      "instance_manage"
    ]
  },
  "Parameters": {
    "targets": {
      "Type": "Json",
      "AssociationProperty": "Targets",
      "AssociationPropertyMetadata": {
        "ResourceType": "ALIYUN::ECS::Instance"
      }
    },
    "maxBandwidthIn": {
      "Description": {
        "en": "The maximum public network bandwidth for in-direction.",
        "zh-cn": "\u516c\u7f51\u5165\u5e26\u5bbd\u6700\u5927\u503c\u3002"
      },
      "Type": "Number",
      "MinValue": 1,
      "MaxValue": 200
    },
    "maxBandwidthOut": {
      "Description": {
        "en": "The maximum public network bandwidth for out-direction.",
        "zh-cn": "\u516c\u7f51\u51fa\u5e26\u5bbd\u6700\u5927\u503c\u3002"
      },
      "Type": "Number",
      "MinValue": 0,
      "MaxValue": 100
    },
    "startTime": {
      "Description": {
        "en": "The start time of upgrade. Format: yyyy-MM-ddThh:mmZ.",
        "zh-cn": "\u4e34\u65f6\u5e26\u5bbd\u5347\u7ea7\u5f00\u59cb\u65f6\u95f4\u3002\u6309\u7167ISO8601\u6807\u51c6\u8868\u793a\uff0c\u5e76\u4f7f\u7528UTC +0\u65f6\u95f4\uff0c\u683c\u5f0f\u4e3ayyyy-MM-ddThh:mmZ\u3002\u7cbe\u786e\u5230\u5206\u949f\uff08mm\uff09\u3002"
      },
      "Type": "String",
      "AssociationProperty": "DateTime",
      "AssociationPropertyMetadata": {
        "Format": "yyyy-MM-ddThh:mmZ"
      }
    },
    "endTime": {
      "Description": {
        "en": "The end time of upgrade. Format: yyyy-MM-ddThhZ.",
        "zh-cn": "\u4e34\u65f6\u5e26\u5bbd\u5347\u7ea7\u7ed3\u675f\u65f6\u95f4\u3002\u6309\u7167ISO8601\u6807\u51c6\u8868\u793a\uff0c\u5e76\u4f7f\u7528UTC +0\u65f6\u95f4\uff0c\u683c\u5f0f\u4e3ayyyy-MM-ddThhZ\u3002\u7cbe\u786e\u5230\u5c0f\u65f6\uff08hh\uff09\u3002"
      },
      "Type": "String",
      "AssociationProperty": "DateTime",
      "AssociationPropertyMetadata": {
        "Format": "yyyy-MM-ddThhZ"
      }
    },
    "rateControl": {
      "Description": {
        "en": "Concurrency ratio of task execution.",
        "zh-cn": "\u4efb\u52a1\u6267\u884c\u7684\u5e76\u53d1\u6bd4\u7387\u3002"
      },
      "Type": "Json",
      "AssociationProperty": "RateControl",
      "Default": {
        "Mode": "Concurrency",
        "MaxErrors": 0,
        "Concurrency": 10
      }
    },
    "OOSAssumeRole": {
      "Description": {
        "en": "The RAM role to be assumed by OOS.",
        "zh-cn": "OOS\u626e\u6f14\u7684RAM\u89d2\u8272\u3002"
      },
      "Type": "String",
      "Default": "OOSServiceRole"
    }
  },
  "RamRole": "{{ OOSAssumeRole }}",
  "Tasks": [
    {
      "Name": "getInstance",
      "Description": {
        "en": "Views the ECS instances.",
        "zh-cn": "\u83b7\u53d6ECS\u5b9e\u4f8b\u3002"
      },
      "Action": "ACS::SelectTargets",
      "Properties": {
        "ResourceType": "ALIYUN::ECS::Instance",
        "Filters": [
          "{{ targets }}"
        ]
      },
      "Outputs": {
        "instanceIds": {
          "Type": "List",
          "ValueSelector": "Instances.Instance[].InstanceId"
        }
      }
    },
    {
      "Name": "modifyInstanceNetworkSpec",
      "Action": "ACS::ExecuteAPI",
      "Description": {
        "en": "Modifies the temporary bandwidth of the ECS instance with the specified parameters.",
        "zh-cn": "\u901a\u8fc7\u6307\u5b9a\u53c2\u6570\u5347\u7ea7ECS\u5b9e\u4f8b\u4e34\u65f6\u5e26\u5bbd\u3002"
      },
      "Properties": {
        "Service": "ECS",
        "API": "ModifyInstanceNetworkSpec",
        "Parameters": {
          "InstanceId": "{{ ACS::TaskLoopItem }}",
          "InternetMaxBandwidthIn": "{{ maxBandwidthIn }}",
          "InternetMaxBandwidthOut": "{{ maxBandwidthOut }}",
          "StartTime": "{{ startTime }}",
          "EndTime": "{{ endTime }}"
        }
      },
      "Loop": {
        "RateControl": "{{ rateControl }}",
        "Items": "{{ getInstance.instanceIds }}"
      }
    }
  ]
}