{
  "FormatVersion": "OOS-2019-06-01",
  "Description": "Rolls back a disk to the specific disk status by using one of its snapshots.",
  "Parameters": {
    "regionId": {
      "Description": "The ID of region.",
      "Type": "String",
      "Default": "{{ ACS::RegionId }}"
    },
    "diskId": {
      "Description": "The ID of disk.",
      "Type": "String",
      "AllowedPattern": "d-[A-Za-z0-9]*",
      "MinLength": 1,
      "MaxLength": 30
    },
    "instanceId": {
      "Description": "The ID of ECS instance.",
      "Type": "String",
      "MinLength": 1,
      "MaxLength": 30
    },
    "snapshotId": {
      "Description": "The ID of snapshot.",
      "Type": "String",
      "AllowedPattern": "s-[A-Za-z0-9]*",
      "MinLength": 1,
      "MaxLength": 30
    }
  },
  "Tasks": [
    {
      "Name": "stopInstance",
      "Action": "ACS::ExecuteAPI",
      "Description": "Stops the ECS instance with specified Instace ID.",
      "Properties": {
        "Service": "ECS",
        "API": "StopInstance",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceId": "{{ instanceId }}"
        }
      }
    },
    {
      "Name": "untilInstanceStopped",
      "Action": "ACS::WaitFor",
      "Description": "Waits for the ECS Instace to enter stopped status.",
      "Properties": {
        "Service": "ECS",
        "API": "DescribeInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceIds": [
            "{{ instanceId }}"
          ]
        },
        "DesiredValues": [
          "Stopped"
        ],
        "PropertySelector": "Instances.Instance[].Status"
      }
    },
    {
      "Name": "resetDisk",
      "Action": "ACS::ExecuteAPI",
      "Description": "Rolls back a disk to the specific disk status by using one of its snapshots.",
      "Properties": {
        "Service": "ECS",
        "API": "ResetDisk",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DiskId": "{{ diskId }}",
          "SnapshotId": "{{ snapshotId }}"
        }
      }
    },
    {
      "Name": "untilDiskIdReady",
      "Action": "ACS::WaitFor",
      "Description": "describe Disk",
      "Properties": {
        "Service": "ECS",
        "API": "DescribeDisks",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DiskIds": [
            "{{ diskId }}"
          ]
        },
        "DesiredValues": [
          "In_use"
        ],
        "PropertySelector": "Disks.Disk[].Status"
      }
    },
    {
      "Name": "startInstance",
      "Action": "ACS::ExecuteAPI",
      "Description": "Starts the ECS instance with specified Instace ID.",
      "Properties": {
        "Service": "ECS",
        "API": "StartInstance",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceId": "{{ instanceId }}"
        }
      }
    },
    {
      "Name": "untilInstanceReady",
      "Action": "ACS::WaitFor",
      "Description": "Waits for the ECS Instace to enter running status.",
      "Properties": {
        "Service": "ECS",
        "API": "DescribeInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceIds": [
            "{{ instanceId }}"
          ]
        },
        "DesiredValues": [
          "Running"
        ],
        "PropertySelector": "Instances.Instance[].Status"
      }
    }
  ]
}